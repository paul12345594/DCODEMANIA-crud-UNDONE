
<%- include ('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
             <% if (message) { %>
         <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong><%= message.message  %></strong>
         </div>
        <% } %>
            <div class="table-resposive">
                <% if (users != '') { %>
                    <table class="table table-striped text-align-center ">
                        <thead>
                            <tr class="table-dark">
                                <th class="text-center" style="color: #1cff14;">ID</th>
                                <th class="text-center" style="color: #1cff14;">Image</th>
                                <th class="text-center" style="color: #1cff14;">Name</th>
                                <th class="text-center" style="color: #1cff14;">E-Mail</th>
                                <th class="text-center" style="color: #1cff14;">Phone</th>
                                <th class="text-center" style="color: #1cff14;">Action</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            <% users.forEach((user, index) => { %> <!-- Corrected variable name to 'user' -->
                                <tr>
                                    <td class="text-center"><%= index + 1 %></td> <!-- Centered index -->  <!-- Correctly output 'index' and add 1 for a human-readable number -->
                                    <td class="text-center"><img src="/uploads/<%= user.photo %>" width="50" class="img-thumbnail"></td> <!-- Centered image -->
                                    <td class="text-center"><%= user.name %></td>
                                    <td class="text-center"><%= user.email %></td>
                                    <td class="text-center"><%= user.phone %></td>
                                    <td class="text-center">    
                                        <a href="/edit/<%= user._id %>" class="text-success"><i class="fas fa-edit fa-lg -mx-1"></i></a> <!-- Edit Pencil Icon -->
                                        <a href="/delete/<%= user._id %>" class="text-success"><i class="fas fa-trash fa-lg -mx-1" style="color: red;"></i></a> <!-- Trash Icon -->
                                    </td>
                                </tr>
                            <% }); %> <!-- Corrected loop closing -->
                        </tbody>                        
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                    <% } %>
            </div>
        </div>
    </div>
</div>
<%- include ('layout/footer') %>



